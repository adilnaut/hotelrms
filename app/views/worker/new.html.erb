<div style="background-image: url('http://skdev.kz/upload/medialibrary/558/558aaf10ee69babf049a7403cdb0a74f.png'); height: 300px; background-size: 100%; margin-top:-20px; padding-top: 0px;" >

  <div class="row" style="margin-top:255px; position: absolute;" >
  <div class="col-6 col-md-1"></div>
  <div class="col-6 col-md-10">
    <div class="panel panel-default" style="height:100px; width:100%; background: #fff; border-radius: 10px; box-shadow: 0px 2px #eaeaea;">

<%=  form_for :worker, class: "form-inline", method: :post do |f| %>

<div class="form-group col-lg-2"><br>

    <label>SSN:</label>
    <%= f.text_field :SSN, class: "form-control" %>
</div>



<div class="form-group col-lg-2"><br>

    <label>First Name:</label>
    <%= f.text_field :First_n, class: "form-control" %>

</div>

      <div class="form-group col-lg-2"><br>

          <label>Second Name:</label>
          <%= f.text_field :Second_n, class: "form-control" %>
      </div>


      <div class="form-group col-lg-2"><br>

          <label>Salary:</label>
          <%= f.text_field :Salary, class: "form-control" %>
        </div>

      <div class="form-group col-lg-2"><br><br>

  <% if @worker_type.eql? "Receptionist" %>
    <%= select_tag(:rec_ssn,options_for_select( @options)) %>
  <% end %>
  </div>
      <div class="form-group col-lg-2"><br><br>
  <%= f.submit "Create", class: "btn btn-primary" %>
<% end %>
</div>

</div>
<div class="col-6 col-md-1"></div>
</div>
</div>
