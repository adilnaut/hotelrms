<div style="background-image: url('http://skdev.kz/upload/medialibrary/558/558aaf10ee69babf049a7403cdb0a74f.png'); height: 300px; background-size: 100%; margin-top:-20px; padding-top: 0px;" >

  <div class="row" style="margin-top:255px; position: absolute;" >
  <div class="col-6 col-md-1"></div>
  <div class="col-6 col-md-9">
    <div class="panel panel-default" style="height:100px; width:180%; background: #fff; border-radius: 10px; box-shadow: 0px 2px #eaeaea;">
        <!-- <form class="form-inline" action="/appl/rnew" accept-charset="UTF-8" method="post"> -->
        <%=  form_for :static, url: '/static_page/search', class: "form-inline", method: :post do |f| %>
          <br>

        <div class="form-group col-lg-3"><br>
            <label>Check-in</label>
             <!-- <input class="form-control" id="inputEmail" placeholder="Email" style="width: 100%;"> -->
            <%= date_field(:static, :from_d)  %>
        </div>
         <div class="form-group col-lg-3"><br>
            <label>Chck-out</label>
            <%= date_field(:static, :to_d) %>
            <!-- <input type="email" class="form-control" id="inputEmail" placeholder="Email" style="width: 100%;"> -->
        </div>
        <div class="form-group col-lg-2"><br>
            <label>Price</label>
            <%= select_tag(:price, options_for_select( @prices)) %>

            <!-- <input type="text" class="form-control" id="inputEmail" placeholder="Email" style="width: 100%;"> -->
        </div>
        <div class="form-group col-lg-2"><br>
            <label>Guests</label>
            <%= select_tag(:num_of_beds, options_for_select( @nums)) %>

            <!-- <input type="email" class="form-control" id="inputEmail" placeholder="Email" style="width:100%;"> -->
        </div>
        <div class="form-group col-lg-2">
           <label> </label><br>
             <%= f.submit "Search", class: "btn btn-primary", style: "width: 75px; margin-left:-10px;" %>
            <!-- <button type="submit" class="btn btn-primary" style="width: 100%;">search</button> -->
        </div>
        <% end %>
        </form>
      </div>

</div>

</div>
